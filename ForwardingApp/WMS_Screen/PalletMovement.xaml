            <syncIndicator:SfBusyIndicator x:Name="loading" AnimationType="HorizontalPulsingBox" Title="Loading..."  TextColor="Red"  IsVisible="false"/> 

            <inputLayout:SfTextInputLayout 
                Hint="Pallet ID" 
                ContainerBackgroundColor="LightYellow"
                FocusedColor="Black" HorizontalOptions="FillAndExpand"
                TrailingViewPosition="Inside"
                LeadingViewPosition="Inside"
                MinimumHeightRequest="50">   
                
            <Entry x:Name="pdEntry" TextChanged="PdEntry_TextChanged"> 
            <Entry.Behaviors>
                    <local:MaxLengthValidation MaxLength="30" />
                </Entry.Behaviors>        
            </Entry>
         
            <inputLayout:SfTextInputLayout.LeadingView >
                      <Image Source="barCode.png" HeightRequest="100" VerticalOptions="Center" >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="PalletIDScan"/>
                        </Image.GestureRecognizers>
                     </Image>    
            </inputLayout:SfTextInputLayout.LeadingView>
                
            <inputLayout:SfTextInputLayout.TrailingView >
                      <Image Source="cancel.png" HeightRequest="100" VerticalOptions="Center" IsVisible="false" x:Name="pdCancel">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ClearPdEntry" NumberOfTapsRequired="1"/>
                        </Image.GestureRecognizers>
                     </Image>    
            </inputLayout:SfTextInputLayout.TrailingView>    
                
            </inputLayout:SfTextInputLayout>
            
            
      
            <inputLayout:SfTextInputLayout 
                Hint="Suggested" 
                ContainerBackgroundColor="#E5E5E5"
                FocusedColor="Black" x:Name="suggestView" IsVisible="false" >       
            <Entry x:Name="suggestedEntry" IsEnabled="false" FontAttributes="Bold"/>
                   
            </inputLayout:SfTextInputLayout>
            
               
            <inputLayout:SfTextInputLayout 
                Hint="Confirmed"
                ContainerBackgroundColor="LightYellow"
                FocusedColor="Black" HorizontalOptions="FillAndExpand"
                TrailingViewPosition="Inside" LeadingViewPosition="Inside" x:Name="confirmView" IsVisible="false" >   
                
            <Entry x:Name="confirmEntry" TextChanged="ConfirmEntry_TextChanged">
                     <Entry.Behaviors>
                    <local:MaxLengthValidation MaxLength="30"/>
                </Entry.Behaviors>      
            </Entry>
            <inputLayout:SfTextInputLayout.LeadingView> 
                    <Image Source="barCode.png"  VerticalOptions="Center">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ConfirmScan"/>
                        </Image.GestureRecognizers>
                     </Image>
            </inputLayout:SfTextInputLayout.LeadingView>
                
           <inputLayout:SfTextInputLayout.TrailingView >
                      <Image Source="cancel.png" HeightRequest="100" VerticalOptions="Center" IsVisible="false" x:Name="confirmCancel">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ClearConfirmEntry"/>
                        </Image.GestureRecognizers>
                     </Image>    
            </inputLayout:SfTextInputLayout.TrailingView>    
            </inputLayout:SfTextInputLayout>
                
            
            <inputLayout:SfTextInputLayout 
                Hint="Check Digit" 
                ContainerBackgroundColor="LightYellow"
                FocusedColor="Black" x:Name="checkDigitView" IsVisible="false">       
            <Entry x:Name="checkDigitEntry" Keyboard="Numeric"/>
            </inputLayout:SfTextInputLayout>
            
