<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ASolute_Mobile.WMS_Screen.TallyInPalletEntry"
             xmlns:controls="clr-namespace:ASolute_Mobile.CustomRenderer"
             xmlns:combobox="clr-namespace:Syncfusion.XForms.ComboBox;assembly=Syncfusion.SfComboBox.XForms"
              BackgroundColor="#e8e5e5">
    
    <ScrollView>
        
        <StackLayout Padding="15,15,15,15" Spacing="45">
            <Label x:Name="palletDesc" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="CenterAndExpand"/>
            
             <Grid RowSpacing="15" ColumnSpacing="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

                <StackLayout Padding="0,10,0,0" Grid.Row="0" Grid.Column="0">
                    <Label Text="Pallet No." FontAttributes="Bold" />
                </StackLayout>

                <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <controls:CustomEntry x:Name="palletNo" HeightRequest="30" HorizontalOptions="Fill" WidthRequest="150" LineColor="LightYellow"/>
                    <Image Source="barCode.png" WidthRequest="60" HeightRequest="30" VerticalOptions="Center"   >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="PalletScan"/>
                        </Image.GestureRecognizers>
                    </Image>

            </StackLayout>
     
                <StackLayout Padding="0,10,0,0" Grid.Row="1" Grid.Column="0">
                    <Label Text="Pallet Size " FontAttributes="Bold" />                  
                </StackLayout>
            
            <StackLayout Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                    <combobox:SfComboBox HeightRequest="40" HorizontalOptions="FillAndExpand" x:Name="sizeBox" MaximumDropDownHeight="200" BackgroundColor="LightYellow"/>
                    <controls:CustomEntry x:Name="palletTI" HeightRequest="30" WidthRequest="70" HorizontalOptions="Fill"  LineColor="LightYellow" Keyboard="Numeric"/>
                    <controls:CustomEntry x:Name="palletHI" HeightRequest="30" WidthRequest="70" HorizontalOptions="Fill"  LineColor="LightYellow" Keyboard="Numeric"/>
            </StackLayout>

                <StackLayout Padding="0,10,0,0" Grid.Row="2" Grid.Column="0">
                    <Label Text="Quantity" FontAttributes="Bold"   />
                </StackLayout>
                
                <StackLayout Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
                    <controls:CustomEntry x:Name="quantity" HeightRequest="30" HorizontalOptions="FillAndExpand"  LineColor="LightYellow" Keyboard="Numeric"/>
                    <combobox:SfComboBox HeightRequest="40" x:Name="unitBox" HorizontalOptions="FillAndExpand" MaximumDropDownHeight="200" BackgroundColor="LightYellow"/>
                </StackLayout>
                
                
                
                <StackLayout Padding="0,10,0,0" Grid.Row="3" Grid.Column="0" >
                    <Label Text="Status" FontAttributes="Bold"   WidthRequest="150" />
                </StackLayout>

                <combobox:SfComboBox Grid.Row="3" Grid.Column="1" HeightRequest="40" x:Name="statusBox" MaximumDropDownHeight="200" BackgroundColor="LightYellow"/>


                <StackLayout Padding="0,10,0,0" Grid.Row="4" Grid.Column="0">
                    <Label Text="Batch No" FontAttributes="Bold" />
                </StackLayout>
           
            <StackLayout Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                    <controls:CustomEntry x:Name="batchNo" HeightRequest="30" HorizontalOptions="Fill" LineColor="WhiteSmoke" WidthRequest="150"/>
                    <Image Source="barCode.png" WidthRequest="60" HeightRequest="30" VerticalOptions="Center">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="BatchScan"/>
                        </Image.GestureRecognizers>
                    </Image>

            </StackLayout>

                <StackLayout Padding="0,10,0,0" Grid.Row="5" Grid.Column="0">
                    <Label Text="Expiry Date" FontAttributes="Bold"  />
                </StackLayout>
            
            <StackLayout Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
                    <DatePicker x:Name="datePicker" HorizontalOptions="Fill" WidthRequest="130" Format="dd/MM/yyyy"/>
                    <Image Source="barCode.png" WidthRequest="60" HeightRequest="30" VerticalOptions="Center"   >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ExpiryDateScan"/>
                        </Image.GestureRecognizers>
                    </Image>

            </StackLayout>
            
        </Grid>
        
            <Image Source="confirm.png" WidthRequest="70" HeightRequest="70" VerticalOptions="Center" Grid.Row="0" Grid.Column="1" HorizontalOptions="Center" x:Name="confirm_icon" IsEnabled="True">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ConfirmAddPallet"/>
                    </Image.GestureRecognizers>
            </Image>
            
        </StackLayout>
        
    </ScrollView>
</ContentPage>
