<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ASolute_Mobile.RefuelHistory">

    <StackLayout>
       <!-- <SearchBar x:Name="historySearch" TextChanged="searchRefuel" Placeholder="Search" HeightRequest="30"/> -->


        <ListView x:Name="refuel_history" IsPullToRefreshEnabled="True" Refreshing="refreshRefuelHistory" SeparatorColor="White"></ListView>
        <Image Source="nodatafound.png" HorizontalOptions="FillAndExpand" IsVisible="False" x:Name="noData"/>
        <StackLayout Padding="10,10,15,15">
        <Image Source="refuel.png" WidthRequest="70" HeightRequest="70" HorizontalOptions="End"  x:Name="refuel_icon">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="addNewRecord"/>
            </Image.GestureRecognizers>
        </Image>
        <ActivityIndicator x:Name="activityIndicator" IsRunning="False" VerticalOptions="Center" HorizontalOptions="Center" />
        </StackLayout>
        
    </StackLayout>
</ContentPage>