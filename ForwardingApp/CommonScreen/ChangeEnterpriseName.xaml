<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ASolute_Mobile.CommonScreen.ChangeEnterpriseName"
             xmlns:local = "clr-namespace:ASolute_Mobile.InputValidation"
             BackgroundColor="#9A2116">
    
    <ContentPage.Content>
        
          <StackLayout Padding="20, 100, 20, 100">
            <Image x:Name="logoImageHolder" Source="appIcon.png" VerticalOptions="End" HorizontalOptions="Center" WidthRequest="100" />
            <StackLayout Padding="0, 10">
            </StackLayout>
            <Label TextColor="#ffffff" FontSize="20" Text="Enterprise Name" HorizontalOptions="Center" FontAttributes="Bold, Italic" />
            <StackLayout Padding="0, 40">
            </StackLayout>
            
            <Entry x:Name="nameEntry" Style="{StaticResource entryStyle}" Text="{Binding EnterpriseName}">
            
                 <Entry.Behaviors>
                    <local:MaxLengthValidation MaxLength="15"/>
                </Entry.Behaviors>
            </Entry>
            
            <Button x:Name="submitButton" Text="Submit" Command="{Binding GetBasedURL}" Style="{StaticResource buttonStyle}"/>
            
            <ActivityIndicator IsRunning="{Binding IsBusy}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
