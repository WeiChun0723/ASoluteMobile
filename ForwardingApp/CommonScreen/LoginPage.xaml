<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ASolute_Mobile.LoginPage" BackgroundColor = "#9A2116"              
             xmlns:controls="clr-namespace:ASolute_Mobile.CustomRenderer"
             xmlns:lc="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             xmlns:lb="clr-namespace:XLabs.Forms.Behaviors;assembly=XLabs.Forms"
             xmlns:local = "clr-namespace:ASolute_Mobile.InputValidation">

    <ScrollView>
    <StackLayout Padding = "20, 0, 20, 20" >
        <StackLayout Padding="0,30">
                     
        </StackLayout>
        <Image x:Name="logoImageHolder" Source="appIcon.png" VerticalOptions="End" HorizontalOptions="Center" WidthRequest="100" HeightRequest="100"/>
        <StackLayout Padding = "0, 10"></StackLayout>
        <Label TextColor="#FFFFFF" FontSize = "Medium" x:Name="AppLabel" HorizontalOptions="Center" FontAttributes="Bold"/>
        <StackLayout Padding = "0, 30"></StackLayout>

        <StackLayout Orientation="Horizontal" >
                <controls:CustomEntry Placeholder="Enterprise name"  x:Name="organizationEntry" Image="organization" Style="{StaticResource entryStyle}" IsEnabled="False" PlaceholderColor="White" HorizontalOptions="FillAndExpand"/>
                <Image Source="edit.png" WidthRequest="20" HeightRequest="20" HorizontalOptions="End"  x:Name="edit_icon">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Update_URL_Clicked"/>
                    </Image.GestureRecognizers>
                </Image>
        </StackLayout>
           
        <controls:CustomEntry Placeholder="UserID" x:Name = "usernameEntry" Image="user" Style="{StaticResource entryStyle}" >
                  <controls:CustomEntry.Behaviors>
                    <local:MaxLengthValidation MaxLength="10"/>
                </controls:CustomEntry.Behaviors>
         </controls:CustomEntry>
        <controls:CustomEntry Placeholder="Password" IsPassword="True" x:Name = "passwordEntry" Image="pass" Style="{StaticResource entryStyle}">
                 <controls:CustomEntry.Behaviors>
                    <local:MaxLengthValidation MaxLength="10"/>
                </controls:CustomEntry.Behaviors>
         </controls:CustomEntry>

        <StackLayout Orientation="Horizontal" >
            <controls:CustomEntry Placeholder="Equipment"  x:Name = "equipmentEntry" Image="logintruck" Style="{StaticResource entryStyle}" HorizontalOptions="FillAndExpand" />
            <controls:CustomPicker HorizontalOptions="End"
                     HeightRequest="40"
                     Image="ic_arrow_drop_down" x:Name="eqPicker" SelectedIndexChanged="eqSelected">
            </controls:CustomPicker>
        </StackLayout>

            <Button Style="{StaticResource buttonStyle}" x:Name="loginButton" Text = "Login" Clicked="Login_Clicked" />
       
        <StackLayout Orientation="Horizontal">
            <Label x:Name="newUser" FontAttributes="Bold" TextColor="AntiqueWhite" Text="New User ?" HorizontalOptions="StartAndExpand" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="NewUser"/>
                </Label.GestureRecognizers>
            </Label>
            <Label x:Name="AppID" FontAttributes="Bold" TextColor="#FFF" HorizontalOptions="End"/>
        </StackLayout>
        <ActivityIndicator x:Name="activityIndicator" IsRunning="False" VerticalOptions="Center" HorizontalOptions="Center" />
      
    </StackLayout>
    </ScrollView>
</ContentPage>
