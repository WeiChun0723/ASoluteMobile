<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ASolute_Mobile.LoginPage"             
             xmlns:controls="clr-namespace:ASolute_Mobile.CustomRenderer"
             xmlns:lc="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             xmlns:lb="clr-namespace:XLabs.Forms.Behaviors;assembly=XLabs.Forms"
             xmlns:local = "clr-namespace:ASolute_Mobile.InputValidation"
             xmlns:inputLayout="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
             BackgroundImage="container">
             
     <Frame BackgroundColor="#9BD4F5" Margin="10" HasShadow="true"  VerticalOptions="CenterAndExpand" CornerRadius="50">
    <ScrollView>
    <StackLayout Padding="15,0,15,0">

        <Image x:Name="logoImageHolder" Source="appIcon.png" VerticalOptions="End" HorizontalOptions="Center" WidthRequest="100" HeightRequest="100"/>
        <StackLayout Padding = "0, 10"></StackLayout>
        <Label TextColor="Black" FontSize = "Medium" x:Name="AppLabel" HorizontalOptions="Center" FontAttributes="Bold"/>
       
        <StackLayout Orientation="Horizontal" >
          <inputLayout:SfTextInputLayout Hint="Enterprise name"                             
          ContainerType="Outlined"
          EnableHintAnimation="true" 
          x:Name="enterpriseView"
          LeadingViewPosition="Inside"
          UnfocusedColor="Black"
          HorizontalOptions="FillAndExpand">    
        <Entry  x:Name="organizationEntry" TextColor="Black" Placeholder="Enterprise name" PlaceholderColor="Black"/>
            
         <inputLayout:SfTextInputLayout.LeadingView>
            <Image
                Source="organization">     
            </Image>
        </inputLayout:SfTextInputLayout.LeadingView>
        </inputLayout:SfTextInputLayout>   
                <Image Source="edit.png" WidthRequest="20" HeightRequest="20" HorizontalOptions="End"  x:Name="edit_icon">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Update_URL_Clicked"/>
                    </Image.GestureRecognizers>
                </Image>
        </StackLayout>
           
         <inputLayout:SfTextInputLayout Hint="User ID"                             
          ContainerType="Outlined"
          EnableHintAnimation="true" 
          x:Name="userView"
          LeadingViewPosition="Inside"
          UnfocusedColor="Black">    
        <Entry x:Name="usernameEntry" TextColor="Black" >
               <Entry.Behaviors>
                    <local:MaxLengthValidation MaxLength="10"/>
                </Entry.Behaviors>     
         </Entry>

         <inputLayout:SfTextInputLayout.LeadingView>
            <Image
                Source="user">     
            </Image>
        </inputLayout:SfTextInputLayout.LeadingView>
        </inputLayout:SfTextInputLayout>    
            
            <inputLayout:SfTextInputLayout Hint="Password"                             
          ContainerType="Outlined"
          EnableHintAnimation="true" 
          x:Name="passwordView"
          LeadingViewPosition="Inside"
          EnablePasswordVisibilityToggle="true"
          UnfocusedColor="Black">    
        <Entry IsPassword="true" x:Name="passwordEntry" TextColor="Black" />

         <inputLayout:SfTextInputLayout.LeadingView>
            <Image
                Source="pass">     
            </Image>
        </inputLayout:SfTextInputLayout.LeadingView>
        </inputLayout:SfTextInputLayout>

        <StackLayout Orientation="Horizontal" >
            <controls:CustomEntry Placeholder="Equipment"  x:Name = "equipmentEntry" Image="logintruck" Style="{StaticResource entryStyle}" HorizontalOptions="FillAndExpand" />
            <controls:CustomPicker HorizontalOptions="End"
                     HeightRequest="40"
                     Image="ic_arrow_drop_down" x:Name="eqPicker" SelectedIndexChanged="eqSelected">
            </controls:CustomPicker>
        </StackLayout>

            <Button Style="{StaticResource buttonStyle}" x:Name="loginButton" Text = "Login" Clicked="Login_Clicked" />
       
        <StackLayout Orientation="Horizontal">
            <Label x:Name="newUser" FontAttributes="Bold" TextColor="Black" Text="New User ?" HorizontalOptions="StartAndExpand" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="NewUser"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
        <ActivityIndicator x:Name="activityIndicator" IsRunning="False" VerticalOptions="Center" HorizontalOptions="Center" />
      
    </StackLayout>
    </ScrollView>
    </Frame>
</ContentPage>
