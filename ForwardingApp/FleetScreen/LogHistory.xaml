<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ASolute_Mobile.LogHistory">
 
        <StackLayout>
      
        <DatePicker x:Name="logDate"  HorizontalOptions="FillAndExpand" DateSelected="recordDate" BackgroundColor="LightYellow"/>
        <ListView x:Name="logHistory" IsPullToRefreshEnabled="True" Refreshing="logRefresh" ItemTapped="selectLog" SeparatorColor="White"></ListView>

        <StackLayout Padding="10,10,15,15">
            <Image Source="truck.png" WidthRequest="70" HeightRequest="70" HorizontalOptions="End"  x:Name="log_icon">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="addNewLog"/>
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
    </StackLayout>
   
</ContentPage>