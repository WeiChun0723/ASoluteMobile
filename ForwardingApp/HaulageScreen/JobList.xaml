<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ASolute_Mobile.HaulageScreen.JobList">
    
        <StackLayout>
            <Image Source="nodatafound.png"  HorizontalOptions="FillAndExpand" IsVisible="False" x:Name="noData"/>    
            <ListView x:Name="jobList"  ItemTapped="selectJob" IsPullToRefreshEnabled="True" Refreshing="jobListRefresh" SeparatorColor="White" ></ListView>
            <Image Source="barcode_scanner.png" WidthRequest="70" HeightRequest="70" HorizontalOptions="End"  x:Name="scan_icon">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BarCodeScan"/>
                </Image.GestureRecognizers>
            </Image>
            <ActivityIndicator IsEnabled="True" IsVisible="False" HorizontalOptions="FillAndExpand" IsRunning="True"/>
        </StackLayout>

</ContentPage>