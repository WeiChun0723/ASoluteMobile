<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ASolute_Mobile.BusTicketing.CheckOut"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:syncIndicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms">
    
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="10,10,10,10" Spacing="20">
         <syncIndicator:SfBusyIndicator x:Name="print" AnimationType="Print" Title="Printing..." TextColor="Red" IsVisible="false" />
        <Label Text="Total Cash Collected" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" FontSize="50" FontAttributes="Bold"/>
        
        <buttons:SfButton Padding="0,10"  HorizontalOptions="CenterAndExpand"  BackgroundColor="#ED1C24" CornerRadius="20" 
                          HeightRequest="200" WidthRequest="250" FontAttributes="Bold" Text="RM52.60" Clicked="PrintTotal" FontSize="50"/>
        
        
    </StackLayout>
</ContentPage>
